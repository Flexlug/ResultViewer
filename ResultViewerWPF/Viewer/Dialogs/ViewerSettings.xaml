                                <TextBox x:Name="BackgroundAppearTimeTB" PreviewTextInput="FilterNumbersOnly" LostFocus="ChangeBackgroundAppearTime"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <Button Width="25" Height="25" Content="X" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="Red" BorderThickness="0" Panel.ZIndex="10003" Canvas.Right="5" Canvas.Top="5" Click="CloseWindow"/>
