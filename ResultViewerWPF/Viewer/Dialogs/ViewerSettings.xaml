<Window x:Class="ResultViewerWPF.Viewer.Dialogs.ViewerSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResultViewerWPF.Viewer"
        mc:Ignorable="d"
        Title="Viewer" Height="600" Width="800" WindowStyle="None" ShowInTaskbar="True" WindowStartupLocation="CenterScreen" WindowState="Maximized" ResizeMode="NoResize" Loaded="Window_Loaded" KeyDown="Window_KeyDown">
    <Canvas x:Name="MainCanvas" Background="Black" Margin="-2,0,2,0">
        <Button x:Name="ToggleSettingsButton" Canvas.Top="5" Canvas.Left="5" Width="80" Content="Открыть" Click="ToggleSettingsMenu" Panel.ZIndex="10001"/>
        <Button x:Name="ApplySettingsButton" Canvas.Left="5" Width="80" Content="Обновить" Canvas.Top="35" Panel.ZIndex="10002" Click="ApplySettingsButton_Click"/>
        <ScrollViewer x:Name="SettingsPanel" Width="Auto" HorizontalAlignment="Left" FlowDirection="RightToLeft" Height="{Binding ElementName=MainCanvas, Path=ActualHeight}" Canvas.Left="-230" Background="LightGray" Panel.ZIndex="10000">
            <!--<ScrollViewer x:Name="SettingsPanel" Width="Auto" HorizontalAlignment="Left" FlowDirection="RightToLeft" Height="5000" Canvas.Left="-230" Background="LightGray" Panel.ZIndex="10000">-->
                <StackPanel Width="200" Margin="5" FlowDirection="LeftToRight">                
                <GroupBox Header="Сброс" Margin="5">
                    <StackPanel Margin="5">
                        <Button Content="Сбросить настройки" ToolTip="Сбросить настройки до стандартных значений" Click="SetDefaultSettings"/>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="Отображение данных" Margin="5">
                    <StackPanel Margin="5">
                        <Button Content="Тестовые" ToolTip="Загрузить список с уже заранее введёнными жюри и участниками конкурса для полноценного просмотра всех возможностей программы" Click="SetTestLogic"/>
                        <Button Content="Пользовательские" ToolTip="Загрузить список введённых пользователем жюри и участников конкурса" Click="SetUserLogic"/>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="Отображение цветов" Margin="5">
                    <StackPanel Margin="5">
                        <Button Content="Показ" ToolTip="Отображать панели в таком виде, в котором они будут представлены во время основного показа" Click="ShowMainScreenColors"/>
                        <Button Content="Финал" ToolTip="Отображать панели в таком виде, в котором они будут представлены на финальном экране с окончательными результатами" Click="ShowFinalscreenColors"/>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="Главные настройки" Margin="5">
                    <StackPanel Margin="5">
                        <Label Content="Режим сортировки" ToolTip="Режим сортировки участников (сортировка идёт только по баллам)"/>
                        <ComboBox x:Name="ChooseMemberSortingMode" SelectionChanged="ChooseMemberSortingMode_SelectionChanged">
                            <ComboBoxItem Content="По убыванию"/>
                            <ComboBoxItem Content="По возрастанию"/>
                        </ComboBox>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="Панель участника" Margin="5">
                    <StackPanel Margin="5">
                        <Label Content="Ширина панели" ToolTip="Ширина панели участника"/>
                        <TextBox x:Name="MemberPanelWidthTB" PreviewTextInput="FilterNumbersOnly" LostFocus="ChangeMemberPanelWidth"/>
                        <Label Content="Высота панели" ToolTip="Высота панели участника"/>
                        <TextBox x:Name="MemberPanelHeightTB" PreviewTextInput="FilterNumbersOnly" LostFocus="ChangeMemberPanelHeight"/>
                        <Label Content="Размер шрифта" ToolTip="Размер шрифта для панели участника"/>
                        <TextBox x:Name="MemberNameFontSizeTB" PreviewTextInput="FilterNumbersOnly" LostFocus="ChangeMemberNameFontSize"/>
                        <Label Content="Ширина контура" ToolTip="Ширина контура для панели участника"/>
                        <TextBox x:Name="MemberPanelStrokeWidthTB" PreviewTextInput="FilterNumbersOnly" LostFocus="ChangeMemberPanelStrokeWidth"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Content="Цвет панели" ToolTip="Цвет шрифта для нижней фразы" Margin="0, 0, 0, -8"/>
                            <Canvas x:Name="ShowMemberPanelColor" Background="AliceBlue" Grid.Column="1" Grid.Row="1" Height="20" Margin="5"/>
                            <Button x:Name="ChangeMemberPanelColor" Content="Изменить" Grid.Column="0" Grid.Row="1" Margin="5" Click="ChangeMemberPanelColor_Click"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Content="Цвет выделенной панели" ToolTip="Такой цвет получит панель участника после того, как пройдет анимация присвоения участнику балла" Margin="0, 0, 0, -8"/>
                            <Canvas x:Name="ShowMemberPanelChosenColor" Background="AliceBlue" Grid.Column="1" Grid.Row="1" Height="20" Margin="5"/>
                            <Button x:Name="ChangeMemberPanelChosenColor" Content="Изменить" Grid.Column="0" Grid.Row="1" Margin="5" Click="ChangeMemberPanelChosenColor_Click"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Content="Цвет контура панели" ToolTip="Цвет контура вокруг панели участника" Margin="0, 0, 0, -8"/>
                            <Canvas x:Name="ShowMemberPanelStrokeColor" Background="AliceBlue" Grid.Column="1" Grid.Row="1" Height="20" Margin="5"/>
                            <Button x:Name="ChangeMemberPanelStrokeColor" Content="Изменить" Grid.Column="0" Grid.Row="1" Margin="5" Click="ChangeMemberPanelStrokeColor_Click"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0, 0, 0, -8">
                                <CheckBox x:Name="ChangeMemberPanelUseSecondShooseColor" VerticalAlignment="Center" ToolTip="Использвать данный цвет" Click="ChangeMemberPanelUseSecondShooseColor_Click"/>
                                <Label Content="Цвет после выделения" ToolTip="Такой цвет получит панель, если участник, которого она показывает, уже получил балл и выделения больше нет" Margin="0, 0, 0, 0"/>
                            </StackPanel>
                            <Canvas x:Name="ShowMemberPanelChosenColor2" Background="AliceBlue" Grid.Column="1" Grid.Row="1" Height="20" Margin="5"/>
                            <Button x:Name="ChangeMemberPanelChosenColor2" Content="Изменить" Grid.Column="0" Grid.Row="1" Margin="5,5,5,0" Height="20" VerticalAlignment="Top" Click="ChangeMemberPanelChosenColor2_Click"/>
                        </Grid>

                        <GroupBox Header="Цветовое выделение" ToolTip="Настройка цветового выделения в программе">
                            <StackPanel Margin="5">
                                <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0, 0, 0, 0">
                                    <CheckBox x:Name="UseColorRanges" VerticalAlignment="Center" ToolTip="Использовать настраиваемую конфигурацию цветов" Click="UseColorRanges_Click"/>
                                    <Label ToolTip="Использовать конифгурацию цветов" Margin="0, 0, 0, 0">
                                        <TextBlock>
                                            <Run>Использовать</Run>
                                            <LineBreak/>
                                            <Run>конфигурацию цветов</Run>
                                        </TextBlock>
                                    </Label>
                                </StackPanel>
                                <Button x:Name="ColorConfigurationButton" Content="Конфигурация" ToolTip="Открыть мастера настройки цветового выделения в программе" Click="NominationWizard_Click"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <GroupBox Header="Цвета ТОП-3" ToolTip="Отдельные цвета, в которые будут окрашиваться панели участников в финальном показе">
                            <StackPanel>
                                <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0, 0, 0, -8">
                                    <CheckBox x:Name="ChangeMemberPanelHighlightLeaders" VerticalAlignment="Center" ToolTip="Использвать данный цвет" Click="ChangeMemberPanelHighlightLeaders_Click"/>
                                    <Label Content="Использовать цвета ТОП-3" ToolTip="Включает или отключает выделение участников отдельными цветами в финальном показе" Margin="0, 0, 0, 0"/>
                                </StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Content="Первое место" ToolTip="Цвет панели участника, которая находится на первом месте в топе" Margin="0, 0, 0, -8"/>
                                    <Canvas x:Name="ShowMemberPanelFirstPlace" Background="AliceBlue" Grid.Column="1" Grid.Row="1" Height="20" Margin="5"/>
                                    <Button x:Name="ChangeMemberPanelFirstPlace" Content="Изменить" Grid.Column="0" Grid.Row="1" Margin="5" Click="ChangeMemberPanelFirstPlace_Click"/>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Content="Второе место" ToolTip="Цвет панели участника, которая находится на втором месте в топе" Margin="0, 0, 0, -8"/>
                                    <Canvas x:Name="ShowMemberPanelSecondPlace" Background="AliceBlue" Grid.Column="1" Grid.Row="1" Height="20" Margin="5"/>
                                    <Button x:Name="ChangeMemberPanelSecondPlace" Content="Изменить" Grid.Column="0" Grid.Row="1" Margin="5" Click="ChangeMemberPanelSecondPlace_Click"/>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Content="Третье место" ToolTip="Цвет панели участника, которая находится на третьем месте в топе" Margin="0, 0, 0, -8"/>
                                    <Canvas x:Name="ShowMemberPanelThirdPlace" Background="AliceBlue" Grid.Column="1" Grid.Row="1" Height="20" Margin="5"/>
                                    <Button x:Name="ChangeMemberPanelThirdPlace" Content="Изменить" Grid.Column="0" Grid.Row="1" Margin="5" Click="ChangeMemberPanelThirdPlace_Click"/>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Content="Остальные" ToolTip="Цвет панели участника, которая не вошла в топ-3" Margin="0, 0, 0, -8"/>
                                    <Canvas x:Name="ShowMemberPanelOtherPlaces" Background="AliceBlue" Grid.Column="1" Grid.Row="1" Height="20" Margin="5"/>
                                    <Button x:Name="ChangeMemberPanelOtherPlaces" Content="Изменить" Grid.Column="0" Grid.Row="1" Margin="5" Click="ChangeMemberPanelOtherPlaces_Click"/>
                                </Grid>


                            </StackPanel>
                        </GroupBox>
                        <GroupBox Header="Шрифты">
                            <StackPanel>
                                <Label Content="Тип шрифта" ToolTip="Тип шрифта для надписи с ФИО в панели участника"/>
                                <ComboBox x:Name="ChooseMemberNameFontWeight" SelectionChanged="ChooseMemberNameFontWeight_SelectionChanged">
                                    <ComboBoxItem Content="Black"/>
                                    <ComboBoxItem Content="Bold"/>
                                    <ComboBoxItem Content="DemiBold"/>
                                    <ComboBoxItem Content="ExtraBlack"/>
                                    <ComboBoxItem Content="ExtraBold"/>
                                    <ComboBoxItem Content="ExtraLight"/>
                                    <ComboBoxItem Content="Heavy"/>
                                    <ComboBoxItem Content="Light"/>
                                    <ComboBoxItem Content="Medium"/>
                                    <ComboBoxItem Content="Normal"/>
                                    <ComboBoxItem Content="Regular"/>
                                    <ComboBoxItem Content="SemiBold"/>
                                    <ComboBoxItem Content="Thin"/>
                                    <ComboBoxItem Content="UltraBlack"/>
                                    <ComboBoxItem Content="UltraBold"/>
                                    <ComboBoxItem Content="UltraLight"/>
                                </ComboBox>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Content="Цвет шрифта" ToolTip="Цвет шрифта для надписи с ФИО в панели участника" Margin="0, 0, 0, -8"/>
                                    <Canvas x:Name="ShowMemberNameFontColor" Background="AliceBlue" Grid.Column="1" Grid.Row="1" Height="20" Margin="5"/>
                                    <Button x:Name="changeMemberNameFontColor" Content="Изменить" Grid.Column="0" Grid.Row="1" Margin="5" Click="ChangeMemberNameFontColor_Click"/>
                                </Grid>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Header="Панель с баллами">
                            <StackPanel Margin="5">
                                <Label Content="Высота панели" ToolTip="Высота панели с баллами"/>
                                <TextBox x:Name="MemberPointsPanelHeightTB" PreviewTextInput="FilterNumbersOnly" LostFocus="ChangeMemberPointsPanelHeight"/>
                                <Label Content="Ширина панели" ToolTip="Ширина панели с баллами"/>
                                <TextBox x:Name="MemberPointsPanelWidthTB" PreviewTextInput="FilterNumbersOnly" LostFocus="ChangeMemberPointsPanelWidth"/>
                                <Label Content="Размер шрифта" ToolTip="Размер шрифта для панели с баллами"/>
                                <TextBox x:Name="MemberPointsFontSizeTB" PreviewTextInput="FilterNumbersOnly" LostFocus="ChangeMemberPointsFontSize"/>
                                <Label Content="Ширина контура" ToolTip="Ширина контура для панели с баллами"/>
                                <TextBox x:Name="MemberPointsStrokeWidthTB" PreviewTextInput="FilterNumbersOnly" LostFocus="ChangeMemberPointsStrokeWidth"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Content="Цвет панели" ToolTip="Цвет заднего фона панели с баллами" Margin="0, 0, 0, -8"/>
                                    <Canvas x:Name="ShowMemberPointsPanelColor" Background="AliceBlue" Grid.Column="1" Grid.Row="1" Height="20" Margin="5"/>
                                    <Button x:Name="ChangeMemberPointsPanelColor" Content="Изменить" Grid.Column="0" Grid.Row="1" Margin="5" Click="ChangeMemberPointsPanelColor_Click"/>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Content="Цвет контура для панели с баллами" Margin="0, 0, 0, -8"/>
                                    <Canvas x:Name="ShowMemberPointsStrokeColor" Background="AliceBlue" Grid.Column="1" Grid.Row="1" Height="20" Margin="5"/>
                                    <Button x:Name="ChangeMemberPointsStrokeColor" Content="Изменить" Grid.Column="0" Grid.Row="1" Margin="5" Click="ChangeMemberPointsStrokeColor_Click"/>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Content="Цвет шрифта для панели с баллами" Margin="0, 0, 0, -8"/>
                                    <Canvas x:Name="ShowMemberPointsFontColor" Background="AliceBlue" Grid.Column="1" Grid.Row="1" Height="20" Margin="5"/>
                                    <Button x:Name="ChangeMemberPointsFontColor" Content="Изменить" Grid.Column="0" Grid.Row="1" Margin="5" Click="ChangeMemberPointsFontColor_Click"/>
                                </Grid>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox>
                            <GroupBox.Header>
                                <TextBlock>
                                    <Run>Панель предварительного</Run>
                                    <LineBreak/>
                                    <Run>места</Run>
                                </TextBlock>
                            </GroupBox.Header>
                            <StackPanel>
                                <Label Content="Режим показа мест"/>
                                <ComboBox x:Name="ChooseMemberPlaceShowMode" SelectionChanged="ChooseMemberPlaceShowMode_SelectionChanged">
                                    <ComboBoxItem Content="Отображать всегда" ToolTip="Предварительные места отображаются всегда"/>
                                    <ComboBoxItem Content="Только в финале" ToolTip="Предварительные места покажутся только во время финального показа"/>
                                    <ComboBoxItem Content="Не отображать" ToolTip="Предварительные места вообще не будут отображаться"/>
                                </ComboBox>
                                <Label Content="Отступ" ToolTip="Отступ между панелью с предварительным местов и главной панелью"/>
                                <TextBox x:Name="MemberPlacePanelOffsetTB" PreviewTextInput="FilterNumbersOnly" LostFocus="ChangeMemberPlacePanelOffset"/>
                                <Label Content="Размер шрифта" ToolTip="Размер шрифта для надписи с местом"/>
                                <TextBox x:Name="MemberPlaceFontSizeTB" PreviewTextInput="FilterNumbersOnly" LostFocus="ChangeMemberPlaceFontSize"/>
                                <Label Content="Ширина контура" ToolTip="Ширина контура вокруг предварительного места"/>
                                <TextBox x:Name="MemberPlaceStrokeWidthTB" PreviewTextInput="FilterNumbersOnly" LostFocus="ChangeMemberPlaceStrokeWidth"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Content="Цвет шрифта" ToolTip="Цвет шрифта для надписи с предварительным местом" Margin="0, 0, 0, -8"/>
                                    <Canvas x:Name="ShowMemberPlaceFontColor" Background="AliceBlue" Grid.Column="1" Grid.Row="1" Height="20" Margin="5"/>
                                    <Button x:Name="ChangeMemberPlaceFontColor" Content="Изменить" Grid.Column="0" Grid.Row="1" Margin="5" Click="ChangeMemberPlaceFontColor_Click"/>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Content="Цвет панели" ToolTip="Цвет панели с предварительным местом" Margin="0, 0, 0, -8"/>
                                    <Canvas x:Name="ShowMemberPlacePanelColor" Background="AliceBlue" Grid.Column="1" Grid.Row="1" Height="20" Margin="5"/>
                                    <Button x:Name="ChangeMemberPlacePanelColor" Content="Изменить" Grid.Column="0" Grid.Row="1" Margin="5" Click="ChangeMemberPlacePanelColor_Click"/>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Content="Цвет контура" ToolTip="Цвет контура вокруг надписи с предварительным местом" Margin="0, 0, 0, -8"/>
                                    <Canvas x:Name="ShowMemberPlaceStrokeColor" Background="AliceBlue" Grid.Column="1" Grid.Row="1" Height="20" Margin="5"/>
                                    <Button x:Name="ChangeMemberPlaceStrokeColor" Content="Изменить" Grid.Column="0" Grid.Row="1" Margin="5" Click="ChangeMemberPlaceStrokeColor_Click"/>
                                </Grid>
                                <Label Content="Тип шрифта" ToolTip="Тип шрифта для надписи с предварительным местом"/>
                                <ComboBox x:Name="ChooseMemberPlaceFontWeight" SelectionChanged="ChooseMemberPlaceFontWeight_SelectionChanged">
                                    <ComboBoxItem Content="Black"/>
                                    <ComboBoxItem Content="Bold"/>
                                    <ComboBoxItem Content="DemiBold"/>
                                    <ComboBoxItem Content="ExtraBlack"/>
                                    <ComboBoxItem Content="ExtraBold"/>
                                    <ComboBoxItem Content="ExtraLight"/>
                                    <ComboBoxItem Content="Heavy"/>
                                    <ComboBoxItem Content="Light"/>
                                    <ComboBoxItem Content="Medium"/>
                                    <ComboBoxItem Content="Normal"/>
                                    <ComboBoxItem Content="Regular"/>
                                    <ComboBoxItem Content="SemiBold"/>
                                    <ComboBoxItem Content="Thin"/>
                                    <ComboBoxItem Content="UltraBlack"/>
                                    <ComboBoxItem Content="UltraBold"/>
                                    <ComboBoxItem Content="UltraLight"/>
                                </ComboBox>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Header="Панель доп. данных">
                            <StackPanel>
                                <Label Content="Режим отображения" ToolTip="Меняет режим отображения панели с дополнительными данными"/>
                                <ComboBox x:Name="ChangeShowMemberResultMode" SelectionChanged="ChangeShowMemberResultMode_SelectionChanged">
                                    <ComboBoxItem Content="Всегда отображать" ToolTip="Всегда отображать результаты участника"/>
                                    <ComboBoxItem Content="Отображать частично" ToolTip="Отображать результаты участника после его выделения"/>
                                    <ComboBoxItem Content="Не отображать" ToolTip="Не отображать результаты участника"/>
                                </ComboBox>

                                <Label Content="Ширина панели" ToolTip="Ширина панели дополнительных данных"/>
                                <TextBox x:Name="MemberResultPanelWidthTB" PreviewTextInput="FilterNumbersOnly" LostFocus="ChangeMemberResultPanelWidth"/>

                                <Label Content="Высота панели" ToolTip="Высота панели дополнительных данных"/>
                                <TextBox x:Name="MemberResultPanelHeightTB" PreviewTextInput="FilterNumbersOnly" LostFocus="ChangeMemberResultPanelHeight"/>

                                <Label Content="Ширина контура" ToolTip="Ширина контура для панели с дополнительными данными"/>
                                <TextBox x:Name="MemberResultStrokeWidthTB" PreviewTextInput="FilterNumbersOnly" LostFocus="ChangeMemberResultStrokeWidth"/>

                                <Label Content="Отступ" ToolTip="Отступ между панелью с дополнительными данными и главной панелью"/>
                                <TextBox x:Name="MemberResultPanelOffsetTB" PreviewTextInput="FilterNumbersOnly" LostFocus="ChangeMemberResultPanelOffset"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
