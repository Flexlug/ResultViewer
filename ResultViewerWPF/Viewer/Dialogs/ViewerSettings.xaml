                                <Label Content="AnimMoveTime" ToolTip="Время на перемещение объекта (в мс)"/>
                                <TextBox x:Name="AnimMoveTimeTB" PreviewTextInput="FilterNumbersOnly" LostFocus="ChangeAnimMoveTime"/>

                                <Label Content="AnimAppearTime" ToolTip="Время на проявление объекта (в мс)"/>
